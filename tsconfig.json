{  
    "compilerOptions":{ 
       "module": "commonjs",
       "lib": ["ES2019"],
       "forceConsistentCasingInFileNames": true,
       "resolveJsonModule": true,
       "moduleResolution":"node",
       "pretty":true,
       "sourceMap":true,
       "outDir":"./dist",
       "baseUrl":"./src",
       "emitDecoratorMetadata":true,
       "experimentalDecorators":true,
       "target":"es6",
       "typeRoots":[  
          "node_modules/@types"
       ]
    },
    "include":[  
       "src/**/*.ts"
    ],
    "exclude":[  
       "node_modules"
    ]
 }