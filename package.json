{
  "name": "hpc-api",
  "version": "1.0.0",
  "description": "api for HPC applications",
  "main": "src/server.ts",
  "license": "MIT",
  "private": false,
  "scripts": {
    "check-types": "tsc --noEmit",
    "start": "ts-node src/server.ts",
    "dev": "ts-node-dev --transpile-only --no-notify src/server.ts",
    "prepare": "husky install",
    "lint-prettier": "prettier -c .",
    "lint-eslint": "eslint --quiet .",
    "lint": "npm run lint-prettier && npm run lint-eslint"
  },
  "dependencies": {
    "apollo-server-hapi": "^2.25.0",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.0",
    "knex": "^0.95.6",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.0.0",
    "type-graphql": "^1.1.1",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@hapi/hapi": "^20.1.3",
    "@types/hapi__hapi": "^20.0.8",
    "@unocha/hpc-repo-tools": "^0.1.1",
    "eslint": "^7.27.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "ts-node-dev": "^1.1.6"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --check",
      "eslint"
    ],
    "*.{js,jsx,ts,tsx,md,json}": "prettier --check"
  }
}
