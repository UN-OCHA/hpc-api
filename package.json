{
  "name": "hpc-api",
  "version": "1.0.0",
  "description": "api for HPC applications",
  "main": "src/server.ts",
  "license": "MIT",
  "private": false,
  "scripts": {
    "check-types": "tsc --noEmit",
    "start": "ts-node src/server.ts",
    "dev": "ts-node-dev --transpile-only --no-notify src/server.ts",
    "prepare": "husky install",
    "lint-prettier": "prettier -c .",
    "lint-eslint": "eslint --quiet .",
    "lint": "npm run lint-prettier && npm run lint-eslint"
  },
  "dependencies": {
    "@hapi/hapi": "^20.1.2",
    "apollo-server-hapi": "^2.21.2",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.0",
    "knex": "^0.95.3",
    "lint-staged": "^10.5.4",
    "nexus": "^1.0.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^20.0.7",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "prettier": "^2.2.1"
  },
  "lint-staged": {
    "*.{ts,md,json}": [
      "prettier --check",
      "eslint"
    ]
  }
}
